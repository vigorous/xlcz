    <!-- 分页查询 -->
    <select id="findByPage" resultMap="BaseUserDto" parameterType="UserDto">
        select u.id,
        u.user_name,
        u.name,
        u.remark,
        u.role_id,
        r.role_name,
        d.id dept_Id,
        d.dept_name
        from sys_user u
        left join sys_role r on u.role_id = r.id
        left join sys_dept d on r.dept_id = d.id
        where u.deleted_flag = '0'
        <if test="userName != null and userName != ''">
            and u.user_name like concat(concat('%',#{userName}),'%')
        </if>
        <if test="name != null and name != ''">
            and u.name like concat(concat('%',#{name}),'%')
        </if>
        <if test="roleName != null and roleName != ''">
            and r.role_name like concat(concat('%',#{roleName}),'%')
        </if>
        <if test="createTime != null and createTime != ''">
            and date(u.create_time) = #{createTime}
        </if>
    </select>

    <!-- 分页查询 -->
    <select id="findUserDtoById" resultMap="BaseUserDto" parameterType="java.lang.Integer">
        select u.id,
        u.user_name,
        u.name,
        u.password,
        u.remark,
        u.role_id,
        r.role_name,
        d.id dept_Id,
        d.dept_name
        from sys_user u
        left join sys_role r on u.role_id = r.id
        left join sys_dept d on r.dept_id = d.id
        where u.deleted_flag = '0'
          and u.id = #{id}
    </select>

    <!-- 查询所有用户 -->
    <select id="selectAllUser" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        where deleted_flag = '0'
    </select>

    <!-- 通过用户名查询用户 -->
    <select id="selectByUserName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        where deleted_flag = '0'
        and user_name = #{userName}
    </select>

    <!-- 通过用户名获取角色名称 -->
    <select id="getRole" resultType="String" parameterType="java.lang.String">
        select r.id
        from sys_user u,sys_role r
        where u.roleId = r.id
          and u.userName = #{userName}
    </select>

    <!-- 逻辑删除 -->
    <update id="deleteById" parameterType="java.lang.Integer">
        update sys_user
        set deleted_flag = '1'
        where id = #{id,jdbcType=INTEGER}
    </update>

